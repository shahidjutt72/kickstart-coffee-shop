<%= form_with model: [:admin, @tax_rate], local: true do |form| %>
  <div class="field">
    <%= form.label :product_id %>
    <%= form.collection_select :product_id, Product.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :rate %>
    <%= form.text_field :rate %>
  </div>

  <div class="field">
    <%= form.label :tax_type %>
    <%= form.select :tax_type, TaxRate.tax_types.keys.map { |key| [key.humanize, key] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', admin_tax_rates_path %>
